datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Emails {
  id      String @id @default(uuid())
  name    String
  email   String
  message String
}

model User {
  id                 String   @id @default(uuid())
  username           String   @unique
  password           String
  firstName          String?
  lastName           String?
  email              String?  @unique
  revokeTokensBefore DateTime @default(now())
}

model Project {
  id                  Int                   @id @default(autoincrement())
  title               String
  description         String
  ProjectimageUrl     String
  ProjectsandLanguage ProjectsandLanguage[]
}

model Language {
  id                  Int                   @id @default(autoincrement())
  name                String
  LanguageimageUrl    String
  ProjectsandLanguage ProjectsandLanguage[]
}

model ProjectsandLanguage {
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int // relation scalar field (used in the `@relation` attribute above)
  lenguage   Language @relation(fields: [lenguageId], references: [id])
  lenguageId Int // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([projectId, lenguageId])
}
