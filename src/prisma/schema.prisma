datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Emails {
  id      String @id @default(uuid())
  name    String
  email   String
  message String
}

model User {
  id                 String   @id @default(uuid())
  username           String   @unique
  password           String
  firstName          String?
  lastName           String?
  email              String?  @unique
  revokeTokensBefore DateTime @default(now())
}

model Projects {
  id              Int         @id @default(autoincrement())
  title           String
  description     String
  projectImageUrl String
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  language        Languages[]
}

model Languages {
  id               Int        @id @default(autoincrement())
  lenguague        String
  languageImageUrl String
  created_at       DateTime   @default(now())
  updated_at       DateTime   @updatedAt
  project          Projects[]
}

